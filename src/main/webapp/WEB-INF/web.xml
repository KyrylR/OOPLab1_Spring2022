<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application for Lab1 OOP Spring 2022</display-name>

  <!--  solve xss Loophole  -->
  <filter>
    <filter-name>xssFilter</filter-name>
    <filter-class>ua.univ.filters.XssFilter</filter-class>
  </filter>
  <!--  solve xss Loophole  -->
  <filter-mapping>
    <filter-name>xssFilter</filter-name>
    <!-- Filter path -->
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>ErrorDemo</servlet-name>
    <servlet-class>ua.univ.controllers.ErrorController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ErrorDemo</servlet-name>
    <url-pattern>/ErrorDemo</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/views/index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <error-code>404</error-code>
    <location>/ErrorDemo</location>
  </error-page>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Drivers</web-resource-name>
      <url-pattern>/drivers</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>driver</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Cars</web-resource-name>
      <url-pattern>/cars</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>driver</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Bids</web-resource-name>
      <url-pattern>/bids</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>driver</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Car-Driver Relations</web-resource-name>
      <url-pattern>/carDriver</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>driver</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>FacultyOOPLabs</realm-name>
  </login-config>

  <security-role>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <role-name>manager</role-name>
  </security-role>

  <security-role>
    <role-name>driver</role-name>
  </security-role>
</web-app>
